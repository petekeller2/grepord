{
  "name": "grepord",
  "version": "1.8.2",
  "bin": "./index.js",
  "description": "Grep for an ordered list of files",
  "private": false,
  "main": "index.js",
  "scripts": {
    "test": "ava --tap | tap-nyan",
    "new-release-tag": "PKG_VER=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g');TAG_CMD=\"git tag -a v$(ECHO $PKG_VER | xargs) -m 'Version $PKG_VER'\";eval $TAG_CMD;",
    "push-tags": "git push origin --tags",
    "changelog": "rm CHANGELOG.md | gren changelog --generate",
    "release": "npm run new-release-tag | npm run push-tags | gren release | npm run changelog",
  },
  "files": [
    "index.js",
    "man/grepord.1"
  ],
  "man": "./man/grepord.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petekeller2/grepord.git"
  },
  "keywords": [
    "grep"
  ],
  "author": {
    "name": "Peter Keller",
    "email": "peterkeller@protonmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/petekeller2/grepord/issues"
  },
  "homepage": "https://github.com/petekeller2/grepord#readme",
  "ava": {
    "files": [
      "test.mjs"
    ],
    "nodeArguments": [
      "--experimental-modules",
      "--experimental-json-modules"
    ]
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "tap-nyan": "^1.1.0"
  },
  "dependencies": {
    "filesize": "^6.1.0",
    "shelljs": "^0.8.4"
  }
}
